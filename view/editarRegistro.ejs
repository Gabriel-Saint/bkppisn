<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Editar</title>

    <style>
        .container {
            background-image: url("http://localhost:3000/bkg0.jpg");
        }
        .voltar {
            color: black;
            outline: none;
            text-decoration: none;
        }

        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url("http://localhost:3000/bkg0.jpg");
        }

        #form {
            background-color: #a7b1bb;
            padding: 20px;
            border-radius: 10px;
            width: 300px;
        }

        #form input[type="text"],
        #form input[type="password"] {
            width: 100%;
            margin-bottom: 10px;
        }

        #form button {
            margin-top: 3px;
            width: 100%;
        }

        #form h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-check-input-normal {
            width: auto;
        }

        .form-check-label {
            font-weight: normal;
            margin-left: 5px;
        }

        a {
            text-decoration: none;
            color: white;
        }
    </style>

</head>

<body class="container">

    <form action="atualizar-registro" method="post" id="form">
        <h3>Edição de Registro</h3>
        <span>Descrição</span>
        <input type="hidden" value="<%= dados.id %>" name="id">
        <input type="text" aria-label="First name" class="form-control" required name="descricao" id="descricao"
            value="<%= dados.description_record %>">
            <span>Categoria</span>
            <select class="form-select opcoes" id="inputGroupSelect04 tipo"
            aria-label="Example select with button addon" name="categoria" required>
            <% categorias.forEach(function(categoria) { %>
               <option value="<%= categoria.id %>"><%= categoria.name_category %></option>
            <% }) %>
           </select>
        <span>Tipo</span>
        <select class="form-select opcoes" id="inputGroupSelect04 tipo" aria-label="Example select with button addon"
            name="tipo" required>
            <option value="1">Entrada</option>
            <option value="0">Saída</option>
        </select>
        <span>Valor</span>
        <input type="number" aria-label="Last name" class="form-control" id="valor" required step="0.01" name="valor"
            value="<%= dados.value_record %>">
        <span>Data</span>
        <input type="date" class="form-control" name="data" id="data">
        <button type="submit" class="btn btn-primary">
            
            Editar
        </button>
        <button type="button" class="voltar btn btn-primary">  <a href="/home">Voltar</a></button>


    </form>



    <script src="http://localhost:3000/scriptEdit.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>

    <script>

        document.addEventListener('DOMContentLoaded', () => {
            const data = new Date();
            const ano = data.getFullYear();
            const mes = String(data.getMonth() + 1).padStart(2, '0');
            const dia = String(data.getDate()).padStart(2, '0')
            const dataFormatada = `${ano}-${mes}-${dia}`;

            document.getElementById('data').value = dataFormatada;
        });
    </script>
</body>

</html>